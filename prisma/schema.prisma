generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  category    String   // Pallet, Crate, Lumber
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
